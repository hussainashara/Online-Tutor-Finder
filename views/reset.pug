title Forgot Password
.header
  h1 Reset Password
.container
  h4= msg
  form(action="/reset", method="POST")
    input#username.username(type="text", name="username", placeholder="Username")
    br
    br
    input#old.old(type="password", name="old", placeholder="Old Password")
    br
    br
    input#new.new(type="password", name="new", placeholder="New Password")
    br
    br
    input#submit(type="submit", name="submit", value="Reset")
