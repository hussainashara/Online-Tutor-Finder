.contact-us
  .contact-container
    .contact-form
      h2.major Contact Us
      form(method="post", action="contact-handler")
        .fields
          .field.half
            label(for="name") Your Name
            input#name(type="text", name="name")
          .field.half
            label(for="email") Your Email
            input#email(type="text", name="email")
          .field
            label(for="message") Message
            textarea#message(name="message", rows="4", placeholder="Type Your Message Here ")
        ul.actions
          li
            input.primary(type="submit", name="submit", value="Send Message")
          li
            input(type="reset", value="Reset")


