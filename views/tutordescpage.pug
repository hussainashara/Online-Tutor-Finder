meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", href="CSS/tutordescpage.css")
script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
title Tutor Profile
.header
  h2 Tutor's Profile
.wholebox
  .container
    .firstbox 
      .firstboxone
            #profile-container
                img#profileImage(src="images/tutor.png")
            .firstdescboxone
                h3.firstname= tutdata.firstname
                .firstboxlistitems
                    h3.label Ratings :
                    h3.value.starrating= "★ "+tutdata.rating 
                .firstboxlistitems
                    h3.label Fees : 
                    h3.fees= "₹ "+tutdata.fees
                if bookTutormsg=="NotBooked"
                    .firstboxlistitems
                        form(action="/book", method="post")
                            button(type="submit") Book  
      .firstboxtwo 
            .firstboxlistitems
                    h3.label Description : 
                    p.tutordesc= tutdata.about
            .firstboxlistitems
                    h3.label Availability : 
                    p.tutordesc= tutdata.timings
            .firstboxlistitems
                    h3.label Qualification : 
                    p.tutordesc= tutdata.qualification
      .firstboxthree
        h3.label Reviews :
        each feedback in tutdata.feedbacks
            .feedbackbox
                .feedback-heading
                    p.stu-username= feedback.student_username 
                    p.stu-rating= feedback.student_rating+"⭐"
                p.stu-text= feedback.student_text 
    .secondbox
        .secondboxone   
            h2.heading Contact Details 
            .firstboxlistitems
                h3.label Phone Number :  
                p.contactdesc= tutdata.phone
            .firstboxlistitems
                h3.address.label Address :
                p.contactdesc= tutdata.address1
            .firstboxlistitems
                h3.label City/Town :
                p.contactdesc= tutdata.town 
            .firstboxlistitems
                h3.label State :
                p.contactdesc= tutdata.state 
            .firstboxlistitems
                h3.label Country :
                p.contactdesc= tutdata.country
        if type=="feedbackCan"
            .secondboxtwo
                form.review(action="/savefeedbacks", method="post") 
                    h2.heading1 Give review
                    input.tut-uname(type="text" name="tutoruname" value=tutdata.username)
                    select.feedbackratings(name="feedbackratings") 
                        option(value="nun" selected) Select Ratings
                        option(value="1")   1 ⭐
                        option(value="2")   2 ⭐
                        option(value="3")   3 ⭐
                        option(value="4")   4 ⭐
                        option(value="5")   5 ⭐
                    textarea.feedbacktext(name="feedbacktext", cols="20", rows="2" ,placeholder="Write your review here")
                    button.submit-btn(type="submit") Send